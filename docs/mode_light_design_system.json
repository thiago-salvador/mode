{
    "meta": {
      "project": "Mode Agency",
      "theme": "Ethereal Light / Frosted Glass",
      "version": "1.0",
      "inspiration": "Creme.digital"
    },
    "tokens": {
      "colors": {
        "canvas": {
          "page_bg": "#F3F3F4",
          "noise_overlay": "url('data:image/svg+xml,...') opacity(0.45)",
          "blob_primary": "rgba(255, 70, 85, 0.15)",
          "blob_secondary": "rgba(66, 135, 245, 0.15)",
          "blob_tertiary": "rgba(240, 185, 11, 0.12)"
        },
        "text": {
          "primary": "#0F0F10",
          "secondary": "#5E5E62",
          "tertiary": "#96969B",
          "gradient_heading": "linear-gradient(180deg, #0F0F10 0%, #3F3F46 100%)"
        },
        "glass_surface": {
          "base": "rgba(255, 255, 255, 0.65)",
          "highlight": "rgba(255, 255, 255, 0.90)",
          "border_light": "rgba(255, 255, 255, 0.8)",
          "border_shadow": "rgba(0, 0, 0, 0.06)"
        }
      },
      "typography": {
        "font_family_display": "'Switzer', 'Inter Tight', sans-serif",
        "font_family_body": "'Inter', 'Geist Sans', sans-serif",
        "scale": {
          "hero": {
            "size": "4.5rem",
            "line_height": "1.05",
            "letter_spacing": "-0.04em",
            "weight": "600"
          },
          "h2": {
            "size": "2.5rem",
            "line_height": "1.1",
            "letter_spacing": "-0.03em",
            "weight": "500"
          },
          "eyebrow": {
            "size": "0.75rem",
            "text_transform": "uppercase",
            "letter_spacing": "0.08em",
            "weight": "600"
          },
          "body_large": {
            "size": "1.125rem",
            "line_height": "1.6",
            "color": "tokens.colors.text.secondary"
          }
        }
      },
      "effects": {
        "blur": {
          "backdrop_glass": "blur(20px) saturate(180%)",
          "distant_blob": "blur(80px)"
        },
        "shadows": {
          "glass_card": "0px 4px 24px -1px rgba(0, 0, 0, 0.04), 0px 0px 1px 0px rgba(0, 0, 0, 0.1)",
          "floating_element": "0px 20px 40px -8px rgba(0, 0, 0, 0.08), 0px 8px 12px -4px rgba(0, 0, 0, 0.04)",
          "inner_bevel": "inset 0px 1px 0px 0px rgba(255, 255, 255, 1), inset 0px -1px 0px 0px rgba(0, 0, 0, 0.02)"
        }
      },
      "layout": {
        "grid": {
          "container": "1400px",
          "columns": 12,
          "gap": "24px"
        },
        "bento": {
          "border_radius": "32px",
          "padding": "32px"
        }
      },
      "animations": {
        "hover_lift": "transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1)",
        "glow_pulse": "keyframes glow { 0% { opacity: 0.5; } 50% { opacity: 0.8; } 100% { opacity: 0.5; } }"
      }
    },
    "components": {
      "bento_card": {
        "css_construction": {
          "background": "linear-gradient(145deg, tokens.colors.glass_surface.base 0%, rgba(255,255,255,0.4) 100%)",
          "backdrop-filter": "tokens.effects.blur.backdrop_glass",
          "border": "1px solid rgba(255,255,255, 0.6)",
          "box-shadow": "tokens.effects.shadows.glass_card, tokens.effects.shadows.inner_bevel",
          "border-radius": "tokens.layout.bento.border_radius",
          "position": "relative",
          "overflow": "hidden"
        },
        "content_strategy": {
          "visual_ratio": "60% image/visual, 40% text",
          "interaction": "On hover -> Scale image 1.05x, Reveal subtle gradient border"
        }
      },
      "nav_bar": {
        "style": "Floating Pill",
        "position": "fixed bottom 32px center",
        "glass_effect": "Maximize saturation to pull colors from underlying sections",
        "border": "1px solid rgba(255,255,255, 0.4)"
      },
      "cta_button": {
        "primary": {
          "background": "#0F0F10",
          "color": "#FFFFFF",
          "border_radius": "100px",
          "font_weight": "500",
          "box_shadow": "0px 4px 12px rgba(0,0,0,0.15), inset 0px 1px 0px rgba(255,255,255,0.2)"
        }
      }
    }
  }